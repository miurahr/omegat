<!DOCTYPE suppressions PUBLIC
     "-//Checkstyle//DTD SuppressionFilter Configuration 1.0//EN"
     "https://checkstyle.org/dtds/suppressions_1_0.dtd">

<suppressions>
    <!-- languagetools classes -->
    <suppress files="(Arabic|Asturian|Belarusian|Breton|Catalan)Plugin\.java"
              checks="HideUtilityClassConstructor" />
    <suppress files="(Danish|German|Greek|English|Esperanto|Chinese)Plugin\.java"
              checks="HideUtilityClassConstructor" />
    <suppress files="(Spanish|Persian|French|Irish|Galician|Italian)Plugin\.java"
              checks="HideUtilityClassConstructor" />
    <suppress files="(Japanese|Khmer|Dutch|Polish|Poruguese|Romanian)Plugin\.java"
              checks="HideUtilityClassConstructor" />
    <suppress files="(Russian|Slovak|Slovenian|Swedish|Tamil|Tagalog|Ukrainian)Plugin\.java"
              checks="HideUtilityClassConstructor" />

    <!-- machinetranslators -->
    <suppress checks="(DesignForExtension|MagicNumber|MemberName|HideUtilityClassConstructor)"
              files="(Apertium|DeepL|YandexCloud|Google2|IBMWatson|MyMemory)Translate\.java"/>

    <!-- Auto generated source files -->
    <suppress checks="WhitespaceAround"
            files="(StatisticsWindow|AlignPanel|EditingPanel|AlignMenuFrame|FilterBarSearch|EditingBehaviorPanel)\.java"/>

    <!-- filters and Dialog forms -->
    <suppress files=".*Dialog\.java"
              checks="(DesignForExtension|MagicNumber|MemberName|WhitespaceAround)"/>
    <suppress files=".*Filter\.java"
              checks="(DesignForExtension|MagicNumber)"/>

    <!-- PluginInformation.java -->
    <suppress files="PluginInformation\.java" checks="NeedBraces" lines="167-192"/>

    <!-- SearchResultEntry.java -->
    <suppress checks="(MemberName|MissingSwitchDefault|ParameterNumber)" files="SearchResultEntry\.java"/>

    <!-- missing javadoc: temporary global suppression  -->
    <suppress checks="(DesignForExtension|MagicNumber)"
              files=".*"/>

</suppressions>

